{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2017",
      "jsx": "preserve",
      "moduleResolution": "node",
      "lib": ["dom"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "preserveConstEnums": true
    },
    "include": ["./src/**/**/**/**/**/**/**/*"]
  }