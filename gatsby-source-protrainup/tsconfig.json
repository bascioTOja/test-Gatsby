{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        // "lib": ["dom", "es2015", "es2017"],
        "outDir": ".",
        "strict": true,
        // "noEmit": true,
        // "sourceMap": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true
      },
      "exclude": ["./typescript/types/**"],
      "include": ["./typescript/**/**/**/**/**/**/**/*"]
}